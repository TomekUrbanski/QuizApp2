<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button"
        android:background="@drawable/mammals"
        android:layout_width="@dimen/width_category_button"
        android:layout_height="@dimen/height_category_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/marginS_category_button"
        android:onClick="mammals" />

    <Button
        android:id="@+id/button2"
        android:background="@drawable/amphibians"
        android:layout_width="@dimen/width_category_button"
        android:layout_height="@dimen/height_category_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button"
        android:layout_marginTop="@dimen/marginT_category_button"
        android:onClick="amphibians"
         />

    <Button
        android:id="@+id/button3"
        android:background="@drawable/fish"
        android:layout_width="@dimen/width_category_button"
        android:layout_height="@dimen/height_category_button"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button"
        android:layout_marginEnd="@dimen/marginE_category_button"
        android:onClick="fish"
         />

    <Button
        android:id="@+id/button4"
        android:background="@drawable/reptiles"
        android:layout_width="@dimen/width_category_button"
        android:layout_height="@dimen/height_category_button"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button3"
        android:onClick="reptiles"
         />

</RelativeLayout>

</ScrollView>